<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/light_green"
        android:translationZ="3dp">

        <androidx.cardview.widget.CardView
            android:layout_width="10dp"
            android:backgroundTint="@color/primary_dark_green"
            android:layout_height="match_parent">

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingVertical="30dp"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:id="@+id/dayOfWeek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Friday"/>
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="23sp"
                        android:text="9:00 AM"/>


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="30dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123, Taman ABC, Jalan 123, Skudai Johor 81300."
                    android:drawableStart="@drawable/circle_hollow"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/circle_hollow"
                    android:drawablePadding="10dp"
                    android:text="011-70216015" />
            </LinearLayout>
        </LinearLayout>



        <!--    Address, Contact, Timeslot, Note    -->
    </androidx.cardview.widget.CardView>

</LinearLayout>