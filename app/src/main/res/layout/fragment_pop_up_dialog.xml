<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    tools:context=".PopUpDialogFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TVPopUpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Are you sure?"
            android:textSize="21sp"
            android:textColor="@color/error" />

        <TextView
            android:id="@+id/TVPopUpDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TVPopUpTitle"
            android:layout_marginTop="8dp"
            android:text="Are you sure you would like to delete this post? The deletion is permanent can cannot be undone."
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BtnCancelDelete"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/TVPopUpDesc"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_frame_background"
            android:text="Cancel"
            android:textColor="@color/darkGreen"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BtnConfirmDelete"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/TVPopUpDesc"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_background"
            android:backgroundTint="@color/error"
            android:text="Delete"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="16sp" />

    </RelativeLayout>

</FrameLayout>