<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EcoPulse" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.EcoPulse" parent="Base.Theme.EcoPulse" />

    <style name="drawerAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize the colors as per your requirement -->
        <item name="colorAccent">@color/darkGreen</item> <!-- Color of the selection controls -->
        <item name="android:textColorPrimary">@color/black</item> <!-- Text color -->
        <!-- Other customizations -->
        <item name="android:buttonBarButtonStyle">@style/CustomButtonBarButton</item>
    </style>

    <style name="CustomButtonBarButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- Customize the button colors -->
        <item name="android:textColor">@color/black</item> <!-- Text color -->
        <item name="android:background">@color/darkGreen</item> <!-- Button background -->
        <!-- Other customizations -->
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/light_green</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ecopulse_icon_foreground</item>

        <item name="postSplashScreenTheme">@style/Theme.AppCompat.DayNight.NoActionBar</item>

    </style>



</resources>